{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
    <h2 id="playerName">{{ player.getFirstName }} {{ player.getLastName }}</h2>

    <div class="seasonAverage" type="hidden" value="{{ seasonAverage.getId }}"
         pts="{{ seasonAverage.getPts }}"
         ast="{{ seasonAverage.getAst }}"
         turnover="{{ seasonAverage.getTurnover }}"
         pf="{{ seasonAverage.getPf }}"
         fga="{{ seasonAverage.getFga }}"
         fgm="{{ seasonAverage.getFgm }}"
         fta="{{ seasonAverage.getFta }}"
         ftm="{{ seasonAverage.getFtm }}"
         reb="{{ seasonAverage.getReb }}"
         stl="{{ seasonAverage.getStl }}"
         blk="{{ seasonAverage.getBlk }}">
    </div>

    <canvas class="my-4 w-100" id="myChart" width="1189" height="302" style="display: block; box-sizing: border-box; height: 251px; width: 594px;"></canvas>

    <script src="{{ asset('js/seasonAverage-graph.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>

    <h2>Team</h2>
    <div class="table-responsive small">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Name</th>
                    <th scope="col">Abbreviation</th>
                    <th scope="col">City</th>
                    <th scope="col">Conference</th>
                    <th scope="col">Division</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.getFullName }}</td>
                        <td>{{ team.getName }}</td>
                        <td>{{ team.getAbbreviation }}</td>
                        <td>{{ team.getCity }}</td>
                        <td>{{ team.getConference }}</td>
                        <td>{{ team.getDivision }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
